{{#partial "content"}}
    <div class="container-fluid" style="background: linear-gradient(rgba(0,0,0,0.54), rgba(0,0,0,0.55)), url(&quot;assets/img/white%20rhino.jpg&quot;) bottom left / cover no-repeat;height: 50vh;">
        <section class="position-relative py-4 py-xl-5">
            <div class="container position-relative">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                        <div class="card mb-5">
                            <div class="card-body p-sm-5">
                                <h2 class="text-center mb-4">Add Animal</h2>
                                <form method="post" action="/addHandler">
                                    <div class="mb-3"><input class="form-control" type="text" id="name-2" name="name" placeholder="Name"></div>
                                    <div class="mb-3"><select class="form-select">
                                            <option value="safe" selected="">Safe</option>
                                            <option value="endangered">Endangered</option>
                                        </select></div>
                                    <div><button class="btn btn-primary d-block w-100" type="submit">Send </button></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{{/partial}}

