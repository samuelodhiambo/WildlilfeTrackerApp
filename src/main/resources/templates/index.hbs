{{#partial "content"}}
    <div class="container-fluid" style="background: linear-gradient(rgba(0,0,0,0.54), rgba(0,0,0,0.55)), url(&quot;assets/img/white%20rhino.jpg&quot;) bottom left / cover no-repeat;height: 50vh;"></div>
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Our Animals</h2>
                <ul class="list-group">
                    {{#each animals}}
                    <li class="list-group-item">
                        <div class="d-flex media">
                            <div class="media-body">
                                <div class="d-flex media" style="overflow:visible;">
                                    <div><img class="me-3" style="width: 25px; height:25px;" src="assets/img/white%20rhino.jpg"></div>
                                    <div style="overflow:visible;" class="media-body">
                                        <div class="row">
                                            <div class="col-10">
                                                <h5><a href="#"><strong>{{id}} - {{name}}</strong></a></h5>
                                                <p><br>
<small class="text-muted"> </small></p>
                                            </div>
                                            <div class="col-2">
                                                <div class="dropdown pull-right"><button class="btn btn-link dropdown-toggle d-block w-100" aria-expanded="false" data-bs-toggle="dropdown" type="button"> <i class="fa fa-chevron-down"></i></button>
                                                    <div class="dropdown-menu dropdown-menu-end"><a class="dropdown-item" href="#"><i class="fa fa-pencil fa-fw"></i>Edit</a><a class="dropdown-item" href="/animal/{{id}}/delete"><i class="fa fa-trash-o fa-fw"></i>Delete </a></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    {{/partial}}

{{> layout.hbs}}
